<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" aria-label="Main navigation">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-activity me-2"></i>Athlyze
            </a>

            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/activities">← Volver a Actividades</a>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/activities">Actividades</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detalle</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <% if (activity.tipo==='ejercicio' ) { %>
                                <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-heart-pulse fs-4 text-success"></i>
                                </div>
                                <% } else if (activity.tipo==='alimentacion' ) { %>
                                    <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-egg-fried fs-4 text-warning"></i>
                                    </div>
                                    <% } else { %>
                                        <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                                            <i class="bi bi-speedometer2 fs-4 text-info"></i>
                                        </div>
                                        <% } %>

                                            <div>
                                                <h3 class="mb-1">
                                                    <%= activity.descripcion %>
                                                </h3>
                                                <span
                                                    class="badge bg-<%= activity.tipo === 'ejercicio' ? 'success' : activity.tipo === 'alimentacion' ? 'warning' : 'info' %>">
                                                    <%= activity.tipo.charAt(0).toUpperCase() + activity.tipo.slice(1)
                                                        %>
                                                </span>
                                            </div>
                        </div>

                        <button type="button" class="btn btn-outline-danger"
                            onclick="deleteActivity(<%= activity.id %>)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                    <div class="card-body">
                        <!-- Basic Information -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <h6 class="text-muted mb-2">Fecha</h6>
                                <p class="fw-semibold fs-5">
                                    <%= new Date(activity.fecha).toLocaleDateString('es-ES', { weekday: 'long' ,
                                        year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                </p>
                            </div>

                            <div class="col-md-4">
                                <h6 class="text-muted mb-2">Calorías</h6>
                                <p class="fw-semibold fs-5">
                                    <% if (activity.calorias) { %>
                                        <i class="bi bi-fire text-danger me-1"></i>
                                        <%= activity.calorias %> cal
                                            <% } else { %>
                                                <span class="text-muted">No registradas</span>
                                                <% } %>
                                </p>
                            </div>

                            <div class="col-md-4">
                                <h6 class="text-muted mb-2">Registrado</h6>
                                <p class="fw-semibold fs-6">
                                    <%= new Date(activity.fecha_registro).toLocaleDateString('es-ES') %>
                                        <%= new Date(activity.fecha_registro).toLocaleTimeString('es-ES', {
                                            hour: '2-digit' , minute: '2-digit' }) %>
                                </p>
                            </div>
                        </div>

                                                <!-- Detailed Information -->
                        <% 
                        let medidasData = null;
                        if (activity.medidas) {
                            if (typeof activity.medidas === 'string') {
                                try {
                                    medidasData = JSON.parse(activity.medidas);
                                } catch (e) {
                                    console.error('Error parsing activity.medidas:', e);
                                    // En caso de error, se puede optar por un objeto vacío o manejarlo de otra forma
                                    medidasData = {}; 
                                }
                            } else if (typeof activity.medidas === 'object') {
                                // activity.medidas ya es un objeto, no necesita parseo
                                medidasData = activity.medidas;
                            }
                        }
                        %>

                        <% if (medidasData && Object.keys(medidasData).length > 0) { %>
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="bi bi-info-circle me-2"></i>Información Adicional
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <% Object.keys(medidasData).forEach((key, index)=> { %>
                                                <div class="col-md-6 col-lg-4 mb-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                                            <% if (key.includes('peso') || key.includes('weight')) { %>
                                                                <i class="bi bi-speedometer text-primary"></i>
                                                                <% } else if (key.includes('distancia') ||
                                                                    key.includes('distance')) { %>
                                                                    <i class="bi bi-geo-alt text-primary"></i>
                                                                    <% } else if (key.includes('tiempo') ||
                                                                        key.includes('duracion') ||
                                                                        key.includes('time')) { %>
                                                                        <i class="bi bi-clock text-primary"></i>
                                                                        <% } else if (key.includes('altura') ||
                                                                            key.includes('height')) { %>
                                                                            <i class="bi bi-rulers text-primary"></i>
                                                                            <% } else { %>
                                                                                <i class="bi bi-info text-primary"></i>
                                                                                <% } %>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0 text-capitalize">
                                                                <%= key.replace('_', ' ' ) %>
                                                            </h6>
                                                            <p class="mb-0 fw-semibold text-primary">
                                                                <%= medidasData[key] %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                                <!-- Action Buttons -->
                                <div class="d-flex gap-3 mt-4">
                                    <a href="/activities" class="btn btn-outline-primary">
                                        <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
                                    </a>
                                    <a href="/activities/new" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Nueva Actividad
                                    </a>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar esta actividad? Esta acción no se puede deshacer.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function deleteActivity(activityId) {
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            const form = document.getElementById('deleteForm');
            form.action = `/activities/${activityId}/delete`;
            modal.show();
        }
    </script>
</body>

</html>