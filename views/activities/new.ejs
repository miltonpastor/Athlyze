    <div class="container py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/activities">Actividades</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nueva Actividad</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-plus-circle me-2"></i>Registrar Nueva Actividad
                        </h3>
                        <p class="mb-0 mt-2 opacity-75">Registra tu ejercicio, comida o medidas corporales</p>
                    </div>

                    <div class="card-body p-4">
                        <!-- Error Messages -->
                        <% if (errors.length> 0) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Por favor corrige los siguientes errores:</strong>
                                <ul class="mb-0 mt-2">
                                    <% errors.forEach(error=> { %>
                                        <li>
                                            <%= error.msg %>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% } %>

                                <form action="/activities" method="POST" class="needs-validation" novalidate>
                                    <!-- Tipo de Actividad -->
                                    <div class="mb-4">
                                        <label for="tipo" class="form-label fw-semibold">
                                            <i class="bi bi-tag me-1"></i>Tipo de actividad *
                                        </label>
                                        <select class="form-select form-select-lg" id="tipo" name="tipo" required>
                                            <option value="">Selecciona el tipo de actividad</option>
                                            <option value="ejercicio" <%=oldInput.tipo==='ejercicio' ? 'selected' : ''
                                                %>>
                                                üèÉ‚Äç‚ôÇÔ∏è Ejercicio
                                            </option>
                                            <option value="alimentacion" <%=oldInput.tipo==='alimentacion' ? 'selected'
                                                : '' %>>
                                                üçΩÔ∏è Alimentaci√≥n
                                            </option>
                                            <option value="medidas" <%=oldInput.tipo==='medidas' ? 'selected' : '' %>>
                                                üìè Medidas corporales
                                            </option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Por favor selecciona un tipo de actividad.
                                        </div>
                                    </div>

                                    <!-- Descripci√≥n -->
                                    <div class="mb-4">
                                        <label for="descripcion" class="form-label fw-semibold">
                                            <i class="bi bi-chat-text me-1"></i>Descripci√≥n *
                                        </label>
                                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3"
                                            required
                                            placeholder="Describe tu actividad... ej: Corr√≠ 5km en el parque, Desayun√© avena con frutas, etc."
                                            data-auto-resize><%= oldInput.descripcion || '' %></textarea>
                                        <div class="invalid-feedback">
                                            La descripci√≥n es requerida y debe tener al menos 3 caracteres.
                                        </div>
                                    </div>

                                    <!-- Fecha y Calor√≠as -->
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <label for="fecha" class="form-label fw-semibold">
                                                <i class="bi bi-calendar me-1"></i>Fecha *
                                            </label>
                                            <input type="date" class="form-control form-control-lg" id="fecha"
                                                name="fecha"
                                                value="<%= oldInput.fecha || new Date().toISOString().split('T')[0] %>"
                                                required max="<%= new Date().toISOString().split('T')[0] %>">
                                            <div class="invalid-feedback">
                                                Por favor selecciona una fecha v√°lida.
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="calorias" class="form-label fw-semibold">
                                                <i class="bi bi-fire me-1"></i>Calor√≠as
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control form-control-lg" id="calorias"
                                                    name="calorias" value="<%= oldInput.calorias || '' %>" min="0"
                                                    max="5000" placeholder="0">
                                                <span class="input-group-text">cal</span>
                                            </div>
                                            <small class="form-text text-muted">
                                                Opcional: calor√≠as quemadas (ejercicio) o consumidas (alimentaci√≥n)
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Campos din√°micos seg√∫n tipo -->

                                    <!-- Campos de Ejercicio -->
                                    <div class="dynamic-field ejercicio" style="display: none;">
                                        <h5 class="text-primary mb-3">
                                            <i class="bi bi-heart-pulse me-2"></i>Detalles del Ejercicio
                                        </h5>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <label for="duracion" class="form-label">Duraci√≥n</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="duracion"
                                                        name="duracion" value="<%= oldInput.duracion || '' %>"
                                                        placeholder="30">
                                                    <span class="input-group-text">min</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="distancia" class="form-label">Distancia</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="distancia"
                                                        name="distancia" value="<%= oldInput.distancia || '' %>"
                                                        placeholder="5">
                                                    <span class="input-group-text">km</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="intensidad" class="form-label">Intensidad</label>
                                                <select class="form-select" id="intensidad" name="intensidad">
                                                    <option value="">Seleccionar</option>
                                                    <option value="baja" <%=oldInput.intensidad==='baja' ? 'selected'
                                                        : '' %>>Baja</option>
                                                    <option value="moderada" <%=oldInput.intensidad==='moderada'
                                                        ? 'selected' : '' %>>Moderada</option>
                                                    <option value="alta" <%=oldInput.intensidad==='alta' ? 'selected'
                                                        : '' %>>Alta</option>
                                                    <option value="muy-alta" <%=oldInput.intensidad==='muy-alta'
                                                        ? 'selected' : '' %>>Muy Alta</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Campos de Alimentaci√≥n -->
                                    <div class="dynamic-field alimentacion" style="display: none;">
                                        <h5 class="text-warning mb-3">
                                            <i class="bi bi-egg-fried me-2"></i>Informaci√≥n Nutricional
                                        </h5>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <label for="proteinas" class="form-label">Prote√≠nas</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="proteinas"
                                                        name="proteinas" value="<%= oldInput.proteinas || '' %>"
                                                        placeholder="25">
                                                    <span class="input-group-text">g</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="carbohidratos" class="form-label">Carbohidratos</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="carbohidratos"
                                                        name="carbohidratos" value="<%= oldInput.carbohidratos || '' %>"
                                                        placeholder="45">
                                                    <span class="input-group-text">g</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="grasas" class="form-label">Grasas</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="grasas" name="grasas"
                                                        value="<%= oldInput.grasas || '' %>" placeholder="15">
                                                    <span class="input-group-text">g</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Campos de Medidas -->
                                    <div class="dynamic-field medidas" style="display: none;">
                                        <h5 class="text-info mb-3">
                                            <i class="bi bi-speedometer2 me-2"></i>Medidas Corporales
                                        </h5>
                                        <div class="row mb-3">
                                            <div class="col-md-3">
                                                <label for="peso" class="form-label">Peso</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="peso" name="peso"
                                                        value="<%= oldInput.peso || '' %>" placeholder="70">
                                                    <span class="input-group-text">kg</span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="altura" class="form-label">Altura</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="altura" name="altura"
                                                        value="<%= oldInput.altura || '' %>" placeholder="175">
                                                    <span class="input-group-text">cm</span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="grasa_corporal" class="form-label">% Grasa</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="grasa_corporal"
                                                        name="grasa_corporal"
                                                        value="<%= oldInput.grasa_corporal || '' %>" placeholder="15">
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="musculo" class="form-label">% M√∫sculo</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="musculo" name="musculo"
                                                        value="<%= oldInput.musculo || '' %>" placeholder="35">
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <div class="d-flex gap-3">
                                                <button type="submit" class="btn btn-primary btn-lg">
                                                    <i class="bi bi-check-circle me-2"></i>Registrar Actividad
                                                </button>
                                                <a href="/activities" class="btn btn-outline-secondary btn-lg">
                                                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Form validation
        (function () {
            'use strict';

            const forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();

        // Dynamic fields based on activity type
        const activityTypeSelect = document.getElementById('tipo');
        activityTypeSelect.addEventListener('change', function () {
            showRelevantFields(this.value);
        });

        function showRelevantFields(type) {
            // Hide all dynamic fields first
            const dynamicFields = document.querySelectorAll('.dynamic-field');
            dynamicFields.forEach(function (field) {
                field.style.display = 'none';
            });

            // Show relevant fields based on type
            if (type) {
                const relevantFields = document.querySelectorAll('.dynamic-field.' + type);
                relevantFields.forEach(function (field) {
                    field.style.display = 'block';
                });
            }
        }

        // Show fields if type is already selected (e.g., validation errors)
        if (activityTypeSelect.value) {
            showRelevantFields(activityTypeSelect.value);
        }

        // Auto-resize textarea
        const textarea = document.getElementById('descripcion');
        textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });
    </script>
</body>

